{% extends 'base.j2' %} {% block css %}
<link rel="stylesheet" href="../../../../assets/css/normalize.css" />
<link rel="stylesheet" href="../../../../assets/css/skeleton.css" />
<link
  href="https://fonts.googleapis.com/css?family=Noto+Sans+JP"
  rel="stylesheet"
/>

<link rel="stylesheet" href="../../../../assets/css/style.css" />
{% endblock css %} {% block header %}
<div class="container">
  <header>
    <h1 class="site-title">
      <a href="../../../../index.html">{{ sitemeta.title }}</a>
    </h1>
    <ul>
      {% for menu in menus %}
      <li>
        <a href="../../../../{{ menu }}.html">{{ menu }}</a>
      </li>
      {% endfor %}
    </ul>
  </header>
</div>
{% endblock header %} {% block content%}
<div class="container">
  <h1>{{ article_title }}</h1>
  {% if tags %}
  <ul class="tags">
    {% for tag in tags %}
    <li>
      <a class="tag">{{ tag }}</a>
    </li>
    {% endfor %}
  </ul>
  {% endif %}

  {{ body }}
</div>
{% endblock content %}
